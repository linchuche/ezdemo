<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0.0dip">

    <include layout="@layout/view_common_top_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten">

        <EditText
            android:id="@+id/edt_geg1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/forget_pwd_tel"
            android:inputType="phone"
            android:paddingLeft="@dimen/padding_ten"
            android:paddingRight="@dimen/padding_ten"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/forget_pwd_hint_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/forget_pwd_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_common_height"
            android:background="@color/common_line_color"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_geg2"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/forget_pwd_captcha"
                android:inputType="text"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/forget_pwd_hint_color"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/forget_pwd_size" />

            <Button
                android:id="@+id/btn_sms"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/padding_five"
                android:layout_marginTop="@dimen/padding_five"
                android:background="@drawable/common_btn_square_blue_selector"
                android:gravity="center"
                android:minWidth="@dimen/padding_hundred_twenty"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:text="@string/forget_pwd_get_captcha"
                android:textColor="@color/white"
                android:textSize="@dimen/forget_pwd_size" />

            <com.comslin.ezhome.oriUi.widget.Anticlockwise
                android:id="@+id/chr_sms"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_five"
                android:layout_marginTop="@dimen/padding_five"
                android:background="@drawable/common_btn_square_blue_selector"
                android:gravity="center"
                android:minWidth="@dimen/padding_hundred_twenty"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_common_height"
            android:background="@color/common_line_color"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/setting_notion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten">

        <EditText
            android:id="@+id/edt_geg3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/forget_pwd_new_pwd"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/padding_ten"
            android:paddingRight="@dimen/padding_ten"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/forget_pwd_hint_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/forget_pwd_size" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_common_height"
            android:background="@color/common_line_color"
            android:orientation="horizontal" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_geg4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/forget_pwd_new_pwd_again"
        android:inputType="textPassword"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_twenty"
        android:paddingRight="@dimen/padding_twenty"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/forget_pwd_hint_color"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/forget_pwd_size" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:layout_marginTop="@dimen/login_btn_padding"
        android:background="@drawable/common_btn_square_blue_selector"
        android:gravity="center"
        android:minHeight="@dimen/btn_common_height"
        android:padding="0.0dip"
        android:text="@string/forget_pwd_save"
        android:textColor="@color/white"
        android:textSize="@dimen/common_fontsize_large" />

    <TextView
        android:id="@+id/tv_exit_acount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/padding_ten"
        android:layout_marginTop="@dimen/padding_ten"
        android:background="@drawable/press_transparent_selector"
        android:gravity="center"
        android:minHeight="@dimen/btn_common_height"
        android:padding="0.0dip"
        android:text="@string/use_existing_account"
        android:textColor="@color/blue"
        android:textSize="@dimen/common_fontsize_large"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />
</LinearLayout>