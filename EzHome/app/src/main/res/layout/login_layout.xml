<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_blank"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:contentDescription="@null"
        android:gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/login_form"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_bg"
            android:orientation="vertical"
            android:padding="0.0dip">

            <EditText
                android:id="@id/login_username_edittxt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/login_username_height"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:alpha="0.6"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/login_title_account"
                android:inputType="phone"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/login_pasw_color"
                android:textColorHint="@color/forget_pwd_hint_color"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/common_fontsize_normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_common_height"
                android:alpha="0.3"
                android:background="@color/login_line_color" />

            <EditText
                android:id="@id/login_password_edittxt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/login_username_height"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:alpha="0.6"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/login_title_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/login_pasw_color"
                android:textColorHint="@color/forget_pwd_hint_color"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/common_fontsize_normal" />
        </LinearLayout>

        <Button
            android:id="@+id/email_sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_username_height"
            android:layout_marginLeft="@dimen/padding_forty"
            android:layout_marginRight="@dimen/padding_forty"
            android:layout_marginTop="@dimen/login_btn_padding"
            android:background="@drawable/common_btn_square_white_selector"
            android:gravity="center"
            android:padding="0.0dip"
            android:text="@string/login_button"
            android:textColor="@color/login_login_btn_color"
            android:textSize="@dimen/common_fontsize_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_forty_five"
            android:layout_marginRight="@dimen/padding_forty_five"
            android:layout_marginTop="@dimen/padding_ten"
            android:orientation="horizontal">

            <TextView
                android:id="@id/login_forget_password_btn"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:padding="0.0dip"
                android:text="@string/login_forget_password"
                android:textColor="@color/white"
                android:textSize="@dimen/common_fontsize_large" />

            <TextView
                android:id="@id/login_register_btn"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:padding="0.0dip"
                android:text="@string/login_register"
                android:textColor="@color/white"
                android:textSize="@dimen/common_fontsize_large" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@id/login_ip_setting_btn"
        android:layout_width="100.0dip"
        android:layout_height="@dimen/login_padding_hundred_twenty"
        android:layout_gravity="right"
        android:alpha="0.4"
        android:background="@null"
        android:padding="@dimen/padding_ten"
        android:singleLine="true"
        android:textColor="@drawable/textcolor_white_dark_press_selector"
        android:textSize="@dimen/common_fontsize_samll" />
</LinearLayout>