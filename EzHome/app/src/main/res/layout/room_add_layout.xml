<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@id/room_add_sel_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_twenty"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten">

        <LinearLayout
            android:id="@+id/ll_room_type"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_weight="1.0"
            android:gravity="center"
            android:minHeight="@dimen/widget_common_height">

            <ImageView
                android:id="@id/room_add_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:padding="0.0dip"
                android:scaleType="center" />

            <TextView
                android:id="@id/room_add_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_ten"
                android:ellipsize="none"
                android:gravity="center"
                android:hint="@string/room_add_type_hint"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/gray_txt_color"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/common_fontsize_normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="0.0dip"
            android:scaleType="center"
            android:src="@drawable/arrow_right_bg" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_common_height"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:background="@color/common_line_color" />

    <EditText
        android:id="@id/room_add_edittext_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_forty" />

    <Button
        android:id="@id/room_add_ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:background="@drawable/common_btn_square_blue_selector"
        android:singleLine="true"
        android:text="@string/common_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/common_fontsize_normal" />
</LinearLayout>