<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/view_top_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tittle"
    android:padding="0.0dip">

    <LinearLayout
        android:id="@id/view_top_title_left_layout"
        android:layout_width="@dimen/nav_top_height"
        android:layout_height="@dimen/nav_top_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:id="@id/view_top_title_left_btn"
            android:layout_width="@dimen/nav_top_height"
            android:layout_height="@dimen/nav_top_height"
            android:background="@drawable/press_transparent_selector"
            android:contentDescription="@null"
            android:padding="0.0dip"
            android:scaleType="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/padding_five"
        android:layout_marginLeft="@dimen/widget_common_width"
        android:layout_marginRight="@dimen/widget_common_width"
        android:layout_marginTop="@dimen/padding_five"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/view_top_title_text_txtvew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/common_fontsize_large"
            android:textStyle="bold" />

        <TextView
            android:id="@id/view_top_title_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_three"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/common_fontsize_samllest"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@id/view_top_title_right_btn"
        android:layout_width="@dimen/nav_top_height"
        android:layout_height="@dimen/nav_top_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/press_transparent_selector"
        android:contentDescription="@null"
        android:padding="0.0dip"
        android:scaleType="center"
        android:visibility="visible" />

    <TextView
        android:id="@id/view_top_title_second_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_top_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/view_top_title_right_btn"
        android:background="@drawable/press_transparent_selector"
        android:contentDescription="@null"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten"
        android:scaleType="center"
        android:textColor="@color/white"
        android:textSize="@dimen/common_fontsize_normal"
        android:visibility="gone" />
</RelativeLayout>