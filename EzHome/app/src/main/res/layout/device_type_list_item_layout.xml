<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:id="@id/device_type_list_item_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_padding">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/padding_five"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_five">

                    <TextView
                        android:id="@id/device_type_list_item_tmp_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_three"
                        android:paddingLeft="@dimen/padding_three"
                        android:paddingRight="@dimen/padding_three"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_fontsize_samllest" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@id/device_type_list_item_wind_iv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_btn_square_wind_selector"
                        android:padding="@dimen/padding_five"
                        android:src="@drawable/wind" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@id/device_type_list_item_icon"
                        android:layout_width="@dimen/item_icon_width"
                        android:layout_height="@dimen/item_icon_width"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/item_padding"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/device_outlet" />

                    <TextView
                        android:id="@id/device_type_list_item_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/device_type_list_item_icon"
                        android:layout_marginBottom="@dimen/padding_five"
                        android:layout_toRightOf="@id/device_type_list_item_icon"
                        android:background="@drawable/common_btn_square_green_selector"
                        android:paddingLeft="@dimen/padding_three"
                        android:paddingRight="@dimen/padding_three"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_fontsize_samllest"
                        android:visibility="gone" />
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@id/device_type_list_item_title_txtvew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/common_dark_font_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/common_fontsize_normal" />

                <ImageView
                    android:id="@id/device_type_list_item_sle_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@drawable/selected"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@id/device_type_list_item_right_line"
            android:layout_width="@dimen/grid_line_common_height"
            android:layout_height="fill_parent"
            android:background="@color/common_line_color" />
    </LinearLayout>

    <TextView
        android:id="@id/device_type_list_item_bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_line_common_height"
        android:background="@color/common_line_color" />
</LinearLayout>