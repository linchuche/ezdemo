<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:clickable="true"
        android:onClick="onClick"
        android:id="@id/scene_set_tast_sel_device_open"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:alpha="0.7"
            android:enabled="false"
            android:padding="@dimen/padding_fifteen"
            android:text="@string/scene_set_tast_tip4"
            android:textColor="@color/black"
            android:textSize="@dimen/common_fontsize_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_one"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:background="@color/common_line_color"
        android:orientation="horizontal" />

    <LinearLayout
        android:clickable="true"
        android:onClick="onClick"
        android:id="@id/scene_set_tast_sel_device_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:alpha="0.7"
            android:enabled="false"
            android:padding="@dimen/padding_fifteen"
            android:text="@string/scene_set_tast_tip5"
            android:textColor="@color/black"
            android:textSize="@dimen/common_fontsize_normal" />
    </LinearLayout>
</LinearLayout>