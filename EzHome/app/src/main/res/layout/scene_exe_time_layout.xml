<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/scene_launch_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/common_bg_color"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_ten"
        android:text="@string/scene_add_auto_tip8"
        android:textColor="@color/gray_txt_color"
        android:textSize="@dimen/common_fontsize_samllest_est"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scene_sel_time_picker"
        android:background="@color/scene_sel_time_picker_bg_color">

        <com.android.potevio.easyhome.client.ui.widget.HomePickerView
            android:id="@id/scene_sel_start_time_picker_hour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>

        <com.android.potevio.easyhome.client.ui.widget.HomePickerView
            android:id="@id/scene_sel_start_time_picker_minute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_ten"
        android:gravity="bottom"
        android:text="@string/scene_add_auto_tip9"
        android:textColor="@color/gray_txt_color"
        android:textSize="@dimen/common_fontsize_samllest_est"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scene_sel_time_picker"
        android:background="@color/scene_sel_time_picker_bg_color">

        <com.android.potevio.easyhome.client.ui.widget.HomePickerView
            android:id="@id/scene_sel_time_picker_hour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>

        <com.android.potevio.easyhome.client.ui.widget.HomePickerView
            android:id="@id/scene_sel_time_picker_minute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/tip_dialog_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_twenty"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0.0dip">

        <Button
            android:id="@id/tip_dialog_btn_01"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/btn_common_height"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_square_blue_selector"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/common_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/common_fontsize_normal"/>

        <Button
            android:id="@id/tip_dialog_btn_02"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/btn_common_height"
            android:layout_marginLeft="@dimen/padding_twenty"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_square_blue_selector"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/common_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/common_fontsize_normal"/>
    </LinearLayout>
</LinearLayout>