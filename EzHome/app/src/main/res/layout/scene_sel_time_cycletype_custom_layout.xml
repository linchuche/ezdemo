<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/scene_seltime_cycletype_custom_monday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="@dimen/padding_ten"
            android:text="@string/monday"
            android:textColor="@color/black"
            android:textSize="@dimen/common_fontsize_normal" />

        <ImageView
            android:id="@id/scene_seltime_cycletype_custom_mon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_marginRight="@dimen/padding_ten"
            android:background="@drawable/selected_unsel"
            android:contentDescription="@null"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_one"
        android:background="@color/common_line_color"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@id/scene_seltime_cycletype_custom_tuesday"
