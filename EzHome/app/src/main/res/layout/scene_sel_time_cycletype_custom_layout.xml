    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_twenty"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0.0dip">

        <Button
            android:id="@id/scene_seltime_cycletype_custom_btn_01"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/btn_common_height"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_square_blue_selector"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/common_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/common_fontsize_normal" />

        <Button
            android:id="@id/scene_seltime_cycletype_custom_btn_02"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/btn_common_height"
            android:layout_marginLeft="@dimen/padding_twenty"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_square_blue_selector"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/common_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/common_fontsize_normal" />
    </LinearLayout>
</LinearLayout>