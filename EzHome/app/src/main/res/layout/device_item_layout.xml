<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="@dimen/item_min_height"
    android:orientation="vertical">

    <TextView
        android:id="@id/device_item_line_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_line_common_height"
        android:background="@color/common_line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:descendantFocusability="blocksDescendants"
        android:minHeight="@dimen/item_min_height">

        <TextView
            android:id="@id/device_item_line_left"
            android:layout_width="@dimen/grid_line_common_height"
            android:layout_height="fill_parent"
            android:background="@color/common_line_color" />

        <LinearLayout
            android:id="@id/device_item_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:minHeight="@dimen/item_min_height"
            android:orientation="vertical"
            android:paddingBottom="@dimen/device_padding_bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@id/device_item_icon_layout"
                    android:layout_width="200.0dip"
                    android:layout_height="200.0dip">

                    <ImageView
                        android:id="@id/wave1"
                        android:layout_width="@dimen/item_icon_width"
                        android:layout_height="@dimen/item_icon_width"
                        android:layout_centerInParent="true"
                        android:background="@drawable/wave"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@id/wave2"
                        android:layout_width="@dimen/item_icon_width"
                        android:layout_height="@dimen/item_icon_width"
                        android:layout_centerInParent="true"
                        android:background="@drawable/wave"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@id/wave3"
                        android:layout_width="@dimen/item_icon_width"
                        android:layout_height="@dimen/item_icon_width"
                        android:layout_centerInParent="true"
                        android:background="@drawable/wave"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@id/device_item_icon"
                        android:layout_width="@dimen/item_icon_width"
                        android:layout_height="@dimen/item_icon_width"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <ImageView
                    android:id="@id/device_item_peoplefeel_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/device_outlet"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/device_item_two_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@drawable/device_outlet"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@id/device_item_tv_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@id/device_item_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/common_dark_font_color"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/common_fontsize_xlarge" />

                        <TextView
                            android:id="@id/device_item_type_unit1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_four"
                            android:layout_marginTop="@dimen/padding_four"
                            android:textColor="@color/common_dark_font_color"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/common_fontsize_samllest_est" />
                    </LinearLayout>

                    <TextView
                        android:id="@id/device_item_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_five"
                        android:layout_marginRight="@dimen/padding_five"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/common_dark_font_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/device_item_value_tv_size" />

                    <TextView
                        android:id="@id/device_item_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_five"
                        android:layout_marginRight="@dimen/padding_five"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/common_dark_font_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/common_fontsize_samllest_est" />

                    <ImageView
                        android:id="@id/device_item_bottom_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/device_outlet" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/device_item_title_txtvew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/common_dark_font_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/common_fontsize_normal" />

                <ImageView
                    android:id="@id/device_item_sle_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    android:src="@drawable/selected"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@id/device_item_line_right"
            android:layout_width="@dimen/grid_line_common_height"
            android:layout_height="fill_parent"
            android:background="@color/common_line_color" />
    </LinearLayout>

    <TextView
        android:id="@id/device_item_line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_line_common_height"
        android:background="@color/common_line_color" />
</LinearLayout>