<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/scene_manual_info_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/common_bg_color"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_ten"
                android:padding="@dimen/padding_ten"
                android:text="@string/scene_name"
                android:textColor="@color/gray_txt_color"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"
                android:textSize="@dimen/common_fontsize_normal"/>

            <EditText
                android:id="@id/scene_manual_info_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_ten"
                android:background="@color/white"
                android:padding="@dimen/padding_ten"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"
                android:textSize="@dimen/common_fontsize_normal"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_ten"
                android:text="@string/scene_desc"
                android:textColor="@color/gray_txt_color"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"
                android:textSize="@dimen/common_fontsize_normal"/>

            <EditText
                android:id="@id/scene_manual_info_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_ten"
                android:background="@color/white"
                android:padding="@dimen/padding_ten"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="@dimen/common_fontsize_normal"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_ten"
                android:text="@string/scene_task"
                android:textColor="@color/gray_txt_color"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"
                android:textSize="@dimen/common_fontsize_normal"/>

            <LinearLayout
                android:id="@id/scene_manual_info_task"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:minHeight="@dimen/widget_common_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/scene_manual_info_task_txt"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:padding="@dimen/padding_ten"
                    android:text="@string/scene_add_auto_tip6"
                    android:textColor="@color/gray_txt_color"
                    android:textSize="@dimen/common_fontsize_normal"/>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@id/scene_manual_info_execute_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_margin="@dimen/padding_ten"
        android:layout_marginTop="@dimen/padding_ten"
        android:background="@drawable/common_btn_square_blue_selector"
        android:gravity="center"
        android:padding="0.0dip"
        android:text="@string/scene_info_execute"
        android:textColor="@color/white"
        android:textSize="@dimen/common_fontsize_large"/>
</LinearLayout>