<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/scene_launch_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".oriUi.activity.scene.task.SceneTaskSimpleActivity"
    android:background="@color/common_bg_color"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_twenty"
        android:gravity="bottom"
        android:paddingLeft="@dimen/padding_fifteen"
        android:text="@string/scene_set_tast_tip1"
        android:textColor="@color/gray_txt_color"
        android:textSize="@dimen/common_fontsize_samllest_est" />

    <LinearLayout
        android:clickable="true"
        android:onClick="onClick"
        android:id="@id/scene_set_tast_sel_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_ten"
        android:layout_marginTop="@dimen/padding_ten"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/widget_common_height"
        android:orientation="horizontal">

        <TextView
            android:id="@id/scene_set_tast_sel_device_tv"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:alpha="0.7"
            android:padding="@dimen/padding_ten"
            android:text="@string/scene_set_tast_tip2"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textSize="@dimen/common_fontsize_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_marginRight="@dimen/padding_ten"
            android:background="@drawable/arrow_right_bg"
            android:contentDescription="@null"
            android:scaleType="fitXY" />
    </LinearLayout>

    <ListView
        android:id="@id/scene_set_tast_sel_device_listView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="@dimen/padding_ten"
        android:layout_marginTop="@dimen/padding_ten"
        android:layout_weight="1.0"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/common_line_color"
        android:dividerHeight="@dimen/padding_one"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@drawable/press_transparent_selector"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten"
        android:scrollbars="vertical"
        android:smoothScrollbar="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_ten"
            android:layout_marginTop="@dimen/padding_twenty"
            android:gravity="bottom"
            android:paddingLeft="@dimen/padding_fifteen"
            android:text="@string/scene_set_tast_tip3"
            android:textColor="@color/gray_txt_color"
            android:textSize="@dimen/common_fontsize_samllest_est" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/scene_set_tast_sel_device_open"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/widget_common_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:alpha="0.7"
                    android:enabled="false"
                    android:padding="@dimen/padding_fifteen"
                    android:text="@string/scene_set_tast_tip4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_fontsize_normal" />

                <ImageView
                    android:id="@id/scene_set_tast_sel_device_open_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_ten"
                    android:layout_marginRight="@dimen/padding_fifteen"
                    android:background="@drawable/selected_single"
                    android:contentDescription="@null"
                    android:enabled="false"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_one"
                android:layout_marginLeft="@dimen/padding_ten"
                android:layout_marginRight="@dimen/padding_ten"
                android:background="@color/common_line_color"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@id/scene_set_tast_sel_device_close"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/widget_common_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:alpha="0.7"
                    android:enabled="false"
                    android:padding="@dimen/padding_fifteen"
                    android:text="@string/scene_set_tast_tip5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_fontsize_normal" />

                <ImageView
                    android:id="@id/scene_set_tast_sel_device_close_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_ten"
                    android:layout_marginRight="@dimen/padding_fifteen"
                    android:background="@drawable/selected_single"
                    android:contentDescription="@null"
                    android:enabled="false"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>