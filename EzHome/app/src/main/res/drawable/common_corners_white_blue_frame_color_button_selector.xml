<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/blue" />
            <corners android:topLeftRadius="0.5dip" android:topRightRadius="0.5dip" android:bottomLeftRadius="0.5dip" android:bottomRightRadius="0.5dip" />
            <stroke android:width="@dimen/padding_one" android:color="@color/blue" />
            <padding android:left="@dimen/padding_one" android:top="@dimen/padding_one" android:right="@dimen/padding_one" android:bottom="@dimen/padding_one" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue" />
            <corners android:topLeftRadius="0.5dip" android:topRightRadius="0.5dip" android:bottomLeftRadius="0.5dip" android:bottomRightRadius="0.5dip" />
            <stroke android:width="@dimen/padding_one" android:color="@color/blue" />
            <padding android:left="@dimen/padding_one" android:top="@dimen/padding_one" android:right="@dimen/padding_one" android:bottom="@dimen/padding_one" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/blue" />
            <corners android:topLeftRadius="0.5dip" android:topRightRadius="0.5dip" android:bottomLeftRadius="0.5dip" android:bottomRightRadius="0.5dip" />
            <stroke android:width="@dimen/padding_one" android:color="@color/blue" />
            <padding android:left="@dimen/padding_one" android:top="@dimen/padding_one" android:right="@dimen/padding_one" android:bottom="@dimen/padding_one" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:topLeftRadius="0.5dip" android:topRightRadius="0.5dip" android:bottomLeftRadius="0.5dip" android:bottomRightRadius="0.5dip" />
            <stroke android:width="@dimen/padding_one" android:color="@color/blue" />
            <padding android:left="@dimen/padding_one" android:top="@dimen/padding_one" android:right="@dimen/padding_one" android:bottom="@dimen/padding_one" />
        </shape>
    </item>
</selector>